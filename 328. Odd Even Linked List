class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {
        if(head==NULL || head->next==NULL || head->next->next==NULL) return head;
        ListNode* odd = head;
        ListNode* even= head->next;
        ListNode* attach = head->next;
        while(odd->next!=NULL && even->next!=NULL){
            odd->next = even->next;
            even->next = odd->next->next;
            odd = odd->next;
            even = even->next;
        }
        odd->next = attach;
        return head;
    }
};
