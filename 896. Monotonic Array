class Solution {
public:
    bool isMonotonic(vector<int>& nums) {
        bool flag = false;
        for(int i=0; i<nums.size()-1; i++){
            if(nums[i]<nums[i+1]){
                flag = true;
            }
        }

        if(flag){
            for(int i=1; i<nums.size(); i++){
                if(nums[i-1]>nums[i]){
                    return false;
                    break;
                }
            }
        }

        if(!flag){
            for(int i=0; i<nums.size()-1; i++){
                if(nums[i+1]>nums[i]){
                    return false;
                    break;
                }
            }
        }
        return true;
    }
};
