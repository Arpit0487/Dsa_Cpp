class Solution {
public:
    vector<int> bestTower(vector<vector<int>>& towers, vector<int>& center, int radius) {
        int fac = INT_MIN;
        int x = -1;
        int y = -1;

        for(int i=0; i<towers.size(); i++){
            //calculate manhattan distance 
            int dist = abs(towers[i][0]-center[0]) + abs(towers[i][1]-center[1]);

            //checking reachable or not
            if(dist<=radius){
                //checking fac is greater then equal to or not
                if(towers[i][2] > fac){
                    fac = towers[i][2]; //update factor
                    x = towers[i][0];
                    y = towers[i][1];
                }
                else if(towers[i][2]==fac){
                    if(towers[i][0] < x || (towers[i][0] == x && towers[i][1] < y)){
                        x = towers[i][0];
                        y = towers[i][1];
                    }
                }
            }
        }
        vector<int> ans;
        ans.push_back(x);
        ans.push_back(y);
        return ans;
    }
};
