class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
        int n = nums.size();
        vector<int> ans(n,0);
        ans[0] = nums[0];
        unordered_map<int,int> m;
        int count = 0;
        for(int i=1; i<n; i++){
            ans[i] = nums[i]+ans[i-1];
        }
        for(int i=0; i<n; i++){
            if(ans[i]==k) count++;
            int search = ans[i]-k;
            if(m.find(search)!=m.end()) count+=m[search];
            m[ans[i]]++;
        }
        return count;
    }
};
