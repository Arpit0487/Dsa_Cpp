class Solution {
public:
    vector<string> summaryRanges(vector<int>& nums) {
        vector<string> ans;
        if (nums.empty())
            return ans;

        int base = nums[0];
        int ceil = nums[0];

        for (int i = 0; i < nums.size() - 1; i++) {
            if (nums[i + 1] == nums[i] + 1) {
                ceil = nums[i + 1];
            } else {
                if (ceil == base)
                    ans.push_back(to_string(base));
                else
                    ans.push_back(to_string(base) + "->" + to_string(ceil));
                base = nums[i + 1];
                ceil = nums[i + 1];
            }
        }

        if (ceil == base)
            ans.push_back(to_string(base));
        else
            ans.push_back(to_string(base) + "->" + to_string(ceil));

        return ans;
    }
};
