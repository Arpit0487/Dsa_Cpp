class Solution {
public:
    bool checkZeroOnes(string s) {
        int maxOne = 0;
        int maxZero = 0;
        int countOne = 0;
        int countZero = 0;
        for (int i = 0; i < s.size(); i++) {
            if (s[i] == '1')
                countOne++;
            else {
                maxOne = max(maxOne, countOne);
                countOne = 0;
            }
            if (s[i] == '0')
                countZero++;
            else {
                maxZero = max(maxZero, countZero);
                countZero = 0;
            }
        }
        maxOne = max(maxOne, countOne);
        maxZero = max(maxZero, countZero);
        if(maxOne>maxZero) return true;
        return false;
    }
};
