class Solution {
public:
    bool isPossibleDivide(vector<int>& nums, int k) {
        int n = nums.size();

        if (n % k != 0)
            return false;

        unordered_map<int, int> freq;
        
        sort(nums.begin(), nums.end()); 

        for (auto x : nums)
            freq[x]++;

        for (int i = 0; i < n; i++) {
            int start = nums[i];

            
            if (freq[start] == 0)
                continue;

            for (int j = 0; j < k; j++) {
                int curr = start + j;
                if (freq[curr] == 0)
                    return false; 
                freq[curr]--; 
            }
        }

        return true;
    }
};
