class Solution {
public:
    int minSwaps(string s) {
        int one = 0;
        int zero = 0;
        for (auto x : s) {
            if (x == '1')
                one++;
            else
                zero++;
        }

        if (abs(one - zero) > 1)
            return -1;

        string a = s;
        for (int i = 0; i < a.length(); i++) {
            if (i % 2 == 0)
                a[i] = '0';
            else
                a[i] = '1';
        }

        string b = s;
        for (int i = 0; i < b.length(); i++) {
            if (i % 2 == 0)
                b[i] = '1';
            else
                b[i] = '0';
        }

        int count1 = 0;
        int count2 = 0;
        for (int i = 0; i < s.length(); i++) {
            if (s[i] != a[i])
                count1++;
            if (s[i] != b[i])
                count2++;
        }

        if (one > zero) {
            return count2 / 2;
        } 
        else if (zero > one) {
            return count1 / 2;
        } 
        else {
            if (count1 / 2 < count2 / 2)
                return count1 / 2;
            else
                return count2 / 2;
        }
    }
};
