class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        sort(nums.begin(),nums.end());
        int count=0;
        int prev = INT_MIN;
        for(auto x : nums){
            int floor = x - k;
            int ceil = x + k;
            if(prev<floor){
                prev = floor;
                count++;
            }
            else if(prev<ceil){
                prev++;
                count++;
            }
        }
        return count;
    }
};
