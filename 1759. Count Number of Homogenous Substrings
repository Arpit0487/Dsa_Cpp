class Solution {
public:
    int countHomogenous(string s) {
        const int MOD = 1e9 + 7;
        
        long long ans = s.length();
        long long cnt = 1;           
        
        for (int i = 1; i < s.size(); i++) {
            if (s[i] == s[i-1]) {
                cnt++;                       
            } 
            
            else {
                ans = (ans + (cnt - 1) * cnt / 2) % MOD;
                cnt = 1;
            }
        }
        
        ans = (ans + (cnt - 1) * cnt / 2) % MOD;
        
        return ans;
    }
};
