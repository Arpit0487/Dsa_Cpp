class Solution {
public:
    int minOperations(string s) {
        string a = s;
        for (int i = 0; i < a.length(); i++) {
            if (i % 2 == 0)
                a[i] = '0';
            else
                a[i] = '1';
        }

        string b = s;
        for (int i = 0; i < b.length(); i++) {
            if (i % 2 == 0)
                b[i] = '1';
            else
                b[i] = '0';
        }

        int count1 = 0;
        int count2 = 0;
        for (int i = 0; i < s.length(); i++) {
            if (s[i] != a[i])
                count1++;
            if (s[i] != b[i])
                count2++;
        }

        return min(count1, count2);
    }
};
