class Solution {
public:
    int sum = 0;
    void helper(TreeNode* root, int val){
        if (root == nullptr) return;
        val = val * 10 + root->val;
        if(!root->left && !root->right){
            sum += val;
            return;
        }
        
        helper(root->left, val);
        helper(root->right, val);

    };

    int sumNumbers(TreeNode* root) {
        
        sum = 0;
        helper(root,0);
        return sum;

    }
};
