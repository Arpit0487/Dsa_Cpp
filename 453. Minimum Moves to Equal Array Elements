class Solution {
public:
    int minMoves(vector<int>& nums) {

        /* we have told that we can increase (n-1) elements at a time to make array equal
        instead of that we can decrease any one element 1 at a time 
        and this will also result same */

        int count = 0;
        int mini = *min_element(nums.begin(), nums.end());
        for(auto x : nums) count += x - mini;
        return count;
    }
};
