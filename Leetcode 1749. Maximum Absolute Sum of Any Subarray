class Solution {
public:
    int maxAbsoluteSum(vector<int>& nums) {
        int maxSum = 0;
        int minSum = 0;
        
        int currMax = 0;
        int currMin = 0;

        for (int x : nums) {

            currMax += x;
            maxSum = max(maxSum, currMax);
            if (currMax < 0) currMax = 0;

            currMin += x;
            minSum = min(minSum, currMin);
            if (currMin > 0) currMin = 0;
        }

        return max(abs(maxSum), abs(minSum));
    }
};
