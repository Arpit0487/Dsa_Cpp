class Solution {
public:
    string smallestSubsequence(string s) {
        vector<int> count(26, 0);
        vector<bool> used(26, false);
        string result = "";

        for (char ch : s) {
            count[ch - 'a']++;
        }

        for (char ch : s) {
            count[ch - 'a']--;

            if (used[ch - 'a']) {
                continue;
            }

            while (!result.empty() && ch < result.back() && count[result.back() - 'a'] > 0) {
                used[result.back() - 'a'] = false;
                result.pop_back();
            }

            result.push_back(ch); 
            used[ch - 'a'] = true;
        }

        return result;
    }
};
