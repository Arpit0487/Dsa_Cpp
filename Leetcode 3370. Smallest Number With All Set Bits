class Solution {
public:
    bool check(int n){
        while(n>0){
            if((n&1)==0) return false;
            n>>=1;
        }
        return true;
    }
    int smallestNumber(int n) {
        while(true){
            if(check(n)){
                return n;
                break;
            }
            n++;
        }
        return -1;
    }
};
