class Solution {
public:
    vector<int> minOperations(string boxes) {
        vector<int> ones;
        for(int i=0; i<boxes.size(); i++){
            if(boxes[i]=='1') ones.push_back(i);
        }
        vector<int> ans;
        int count = 0;
        for(int i=0; i<boxes.size(); i++){
            for(int j=0; j<ones.size(); j++){
                count += abs(i-ones[j]);
            }
            ans.push_back(count);
            count = 0;
        }
        return ans;
    }
};
