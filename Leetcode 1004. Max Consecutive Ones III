class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int maxZero = 0;
        int start = 0;
        int zCount = 0;

        for (int end = 0; end < nums.size(); end++) {
            if (nums[end] == 0) {
                zCount++;
            }

            while (zCount > k) {
                if (nums[start] == 0) {
                    zCount--;
                }
                start++;
            }

            maxZero = max(maxZero, end - start + 1);
        }

        return maxZero;
    }
};
