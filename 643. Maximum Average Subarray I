class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        double ans;
        int start = 0;
        int end = k-1;
        int n = nums.size();

        vector<int> prefix(n);
        prefix[0] = nums[0];
        for(int i = 1; i < n; i++){
            prefix[i] = prefix[i-1] + nums[i];
        }

        int firstWindow = prefix[end];
        ans = firstWindow / (double)k;

        while(end < n){
            int x;
            if(start == 0) x = prefix[end];
            else x = prefix[end] - prefix[start - 1];

            ans = max(ans, x / (double)k);

            start++;
            end++;
        }

        return ans;
    }
};
