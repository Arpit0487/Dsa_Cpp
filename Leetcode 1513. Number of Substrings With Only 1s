class Solution {
public:
    int numSub(string s) {
        long long count = 0;
        const int MOD = 1e9 + 7;
        for(int i=0; i<s.length(); i++){
            if(s[i]=='1'){
                int j = i;
                long long n = 0;
                while(j<s.length() && s[j]=='1'){
                    n++;
                    j++;
                }
                count = (count + n * (n + 1) / 2) % MOD;
                i=j-1;
            }
        }
        return count;
    }
};
