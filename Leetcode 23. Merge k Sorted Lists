class Solution {
public:
    ListNode* mergeKLists(vector<ListNode*>& lists) {
        priority_queue<int, vector<int>, greater<int>> minHp;
        
        for (auto list : lists) {
            while (list != NULL) {
                minHp.push(list->val);
                list = list->next;
            }
        }

        ListNode* dummy = new ListNode(0);
        ListNode* temp = dummy;

        while (!minHp.empty()) {
            temp->next = new ListNode(minHp.top());
            minHp.pop();
            temp = temp->next;
        }

        return dummy->next;
    }
};
