class Solution {
public:
    int maxPower(string s) {
        int count = 1;
        int maxi = 0;
        char ch = s[0];
        for(int i=1; i<s.length(); i++){
            if(s[i]==ch){
                count++;
                maxi = max(maxi,count);
            }
            else{
                ch = s[i];
                count = 1;
            }
        }
        maxi = max(maxi,count);
        return maxi;
    }
};
