class Solution {
public:
    int numberOfSubstrings(string s) {
        int freq[3] = {0, 0, 0};
        int left = 0, result = 0;
        int n = s.size();

        for (int right = 0; right < n; right++) {
            freq[s[right] - 'a']++;

            while (freq[0] > 0 && freq[1] > 0 && freq[2] > 0) {
                result += (n - right);
                freq[s[left] - 'a']--;
                left++;
            }
        }

        return result;
    }
};
