class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long long count = 0;
        long long result = 0;
        for (int x : nums) {
            if (x == 0) {
                count++;
                result += count;
            } else {
                count = 0;
            }
        }
        return result;
    }
};
