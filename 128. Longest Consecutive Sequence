class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if(nums.empty()) return 0;

        map<int,int> mp;
        for(auto x : nums) mp[x]++; 

        int maxi = 0;
        int curr = 1;

        int prev = mp.begin()->first;

        for(auto it : mp) {
            int num = it.first;

            if(num == prev + 1) curr++;
            else curr = 1; 

            maxi = max(maxi, curr);
            prev = num;
        }

        return maxi;
    }
};
