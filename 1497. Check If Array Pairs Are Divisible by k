class Solution {
public:
    bool canArrange(vector<int>& arr, int k) {
        vector<int> temp;
        for(int i = 0; i < arr.size(); i++) {
            int num = ((arr[i] % k) + k) % k;
            temp.push_back(num);
        }
        unordered_map<int, int> mp;
        for(auto x : temp) {
            mp[x]++;
        }
        for(auto& x : mp) {
            int rem = x.first;
            if (rem == 0) {
                if (x.second % 2 != 0) return false;
            } else {
                int complement = k - rem;
                if (mp[rem] != mp[complement]) return false;
            }
        }
        return true;
    }
};
