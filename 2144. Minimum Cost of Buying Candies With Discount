class Solution {
public:
    int minimumCost(vector<int>& cost) {
        if(cost.size()==1) return cost[0];
        if(cost.size()==2) return cost[0]+cost[1];
        sort(cost.rbegin(),cost.rend());
        int start = 0;
        int pos = 0;
        int sum = 0;
        for(int i = 0; i < cost.size(); i++) {
            if(pos == 2) {
                pos = 0;
                continue;
            }
            sum += cost[i];
            pos++;
        }
        return sum;
    }
};
