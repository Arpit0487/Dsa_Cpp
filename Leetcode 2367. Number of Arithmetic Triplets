class Solution {
public:
    int arithmeticTriplets(vector<int>& nums, int diff) {
        int count=0;
        unordered_map<int,int>mp;
        int n=nums.size();
        for(int i=0;i<n;i++){
            mp[nums[i]];
        }
        for(int j=0;j<n;j++){
            if(mp.find(nums[j]+diff)!=mp.end() && mp.find(nums[j]-diff)!=mp.end()){
                count++;
            }
        }
        return count;
    }
};
