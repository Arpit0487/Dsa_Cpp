class Solution {
public:
    int maxNumOfMarkedIndices(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int back = 0;
        int front = nums.size()/2;
        if(nums.size()%2==1) front++;
        int k=0;
        while(front<nums.size()){
            if(2*nums[back]<=nums[front]){
                k++;
                back++;
            }
            front++;
        }
        return 2*k;
    }
};
