class Solution {
public:
    bool kLengthApart(vector<int>& nums, int k) {
        vector<int> ones;
        for(int i=0; i<nums.size(); i++){
            if(nums[i]==1) ones.push_back(i);
        }
        for(int i=0; i+1<ones.size(); i++){
            if((ones[i+1]-ones[i])-1<k){
                return false;
            }
        }
        return true;
    }
};
