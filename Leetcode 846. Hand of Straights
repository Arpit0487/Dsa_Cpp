class Solution {
public:
    bool isNStraightHand(vector<int>& hand, int groupSize) {
        int n = hand.size();
        unordered_map<int, int> freq;

        if (n % groupSize != 0)
            return false;

        sort(hand.begin(), hand.end()); 

        for (auto x : hand)
            freq[x]++;

        for (int i = 0; i < n; i++) {
            int start = hand[i];

            
            if (freq[start] == 0)
                continue;

            for (int j = 0; j < groupSize; j++) {
                int curr = start + j;
                if (freq[curr] == 0)
                    return false; 
                freq[curr]--; 
            }
        }

        return true;
    }
};
