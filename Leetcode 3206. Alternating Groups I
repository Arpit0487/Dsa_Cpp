class Solution {
public:
    int numberOfAlternatingGroups(vector<int>& colors) {
        vector<int> dummy = colors;
        for(int i=0; i<2; i++){
            dummy.push_back(colors[i]);
        }
        int start = 0;
        int end = 3;
        int n = dummy.size();
        int count = 0;
        while(end<=n){
            if(dummy[start]==dummy[start+2] && dummy[start]!=dummy[start+1]){
                count++;
            }
            start++;
            end++;
        }
        return count;
    }
};
