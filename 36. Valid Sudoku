class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {
        int n = board.size();
        int m = board[0].size();

        // check rows
        for (int i = 0; i < n; i++) {
            unordered_map<char,int> rows;
            for (int j = 0; j < m; j++) {
                char c = board[i][j];
                if (c == '.') continue;
                rows[c]++;
                if (rows[c] > 1) return false;
            }
        }

        // build columns
        vector<vector<char>> columns(m);
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                columns[j].push_back(board[i][j]);
            }
        }

        // check columns
        for (int j = 0; j < m; j++) {
            unordered_map<char,int> cols;
            for (int i = 0; i < n; i++) {
                char c = columns[j][i];
                if (c == '.') continue;
                cols[c]++;
                if (cols[c] > 1) return false;
            }
        }

        // check 3x3 subgrids
        for (int blockRow = 0; blockRow < 9; blockRow += 3) {
            for (int blockCol = 0; blockCol < 9; blockCol += 3) {
                unordered_map<char,int> box;
                for (int i = 0; i < 3; i++) {
                    for (int j = 0; j < 3; j++) {
                        char c = board[blockRow + i][blockCol + j];
                        if (c == '.') continue;
                        box[c]++;
                        if (box[c] > 1) return false;
                    }
                }
            }
        }

        return true;
    }
};
