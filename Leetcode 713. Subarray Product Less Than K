class Solution {
public:
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
        if(k <= 1) return 0;    
        int count = 0;
        int n = nums.size();

        for(int i = 0; i < n; i++){
            int curr = nums[i];
            if(curr < k) count++;

            for(int j = i + 1; j < n; j++){
                curr *= nums[j];
                if(curr < k){
                    count++;
                } else {
                    break;   
                }
            }
        }
        return count;
    }
};
