class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int count = 0;
        int n = nums.size();
        vector<int> front(n);
        vector<int> back(n);
        front[0]=nums[0];
        for(int i=1; i<n; i++){
            front[i] = front[i-1] + nums[i];
        }
        back[n-1]=nums[n-1];
        for(int i=n-2; i>=0; i--){
            back[i] = back[i+1]+nums[i];
        }

        for(int i=0; i<n-1; i++){
            if((front[i]-back[i+1]) % 2 == 0) count++;
        }
        return count;
    }
};
