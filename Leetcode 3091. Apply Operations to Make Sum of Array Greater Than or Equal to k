class Solution {
public:
    int minOperations(int k) {
        if(k==1) return 0;
        int val = 0;
        int count = INT_MAX;
        while (val <= k) {
            int operations = 0;
            val++;
            int duplications = (k + val - 1) / val - 1;
            operations = (val - 1) + duplications;
            count = min(count, operations);
        }
        return count;
    }
};
