class Solution {
public:
    int waysToSplitArray(vector<int>& nums) {

        int count = 0;

        //calculating prefix sum
        int n = nums.size();
        vector<long long> aage(n,0);
        aage[0] = nums[0];
        for(int i=1; i<n; i++){
            aage[i] = aage[i-1]+nums[i];
        }

        //calculating suffix sum
        vector<long long> peeche(n,0);
        peeche[n-1] = nums[n-1];
        for(int i=n-2; i>=0; i--){
            peeche[i] = peeche[i+1]+nums[i];
        }

        for(int i=0; i<n-1; i++){
            if(aage[i]>=peeche[i+1]) count++;
        }

        return count;
    }
};
