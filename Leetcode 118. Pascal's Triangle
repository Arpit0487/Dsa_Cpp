class Solution {
public:
    vector<vector<int>> generate(int numRows) {
        vector<vector<int>> ans;
        if (numRows == 0) return ans;
        ans.push_back({1});
        if (numRows == 1) return ans;
        ans.push_back({1,1});
        numRows -= 2;
        int curr = 2; 
        while(numRows--){
            vector<int> a;
            a.push_back(1);
            for(int i = 1; i < curr; i++){
                int x = ans[curr-1][i-1] + ans[curr-1][i];
                a.push_back(x);
            }
            a.push_back(1);
            ans.push_back(a);
            curr++;
        }
        return ans;
    }
};
