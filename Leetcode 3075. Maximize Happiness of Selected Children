class Solution {
public:
    long long maximumHappinessSum(vector<int>& happiness, int k) {
        sort(happiness.rbegin(),happiness.rend());
        long long sum = 0;
        for(int i=0; i<happiness.size(); i++){
            if(happiness[i]-i>0) sum+=happiness[i]-i;
            if(i==k-1) break;
        }
        return sum;
    }
};
