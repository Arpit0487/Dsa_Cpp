class Solution {
public:
    int countSubarrays(vector<int>& nums) {
        int count = 0;
        int begin = 0;
        int end = 2;
        while(end<nums.size()){
            float left = nums[begin]+nums[end];
            float right = nums[begin+1]/2.0;
            if(left == right) count++;
            begin++;
            end++;
        }
        return count;
    }
};
