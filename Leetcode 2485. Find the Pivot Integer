class Solution {
public:
    int pivotInteger(int n) {
        vector<int> front;
        int sum = 0;
        for(int i = 1; i <= n; i++){
            sum += i;
            front.push_back(sum);
        }

        vector<int> back(n);
        int curr = 0;
        for(int i = n - 1; i >= 0; i--){
            curr += (i + 1);
            back[i] = curr;
        }

        for(int i = 0; i < n; i++){
            if(front[i] == back[i]) {
                return i + 1;   
            }
        }

        return -1; 
    }
};
