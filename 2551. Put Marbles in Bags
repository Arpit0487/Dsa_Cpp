class Solution {
public:
    long long putMarbles(vector<int>& weights, int k) {
        int n = weights.size();
        vector<int> vec(n-1);
        for(int i=0; i<weights.size()-1; i++){
            vec[i] = weights[i] + weights[i+1];
        }

        sort(vec.begin(), vec.end());

        long long front = 0;
        int i = 0; 
        while(i < k-1){
            front += vec[i];
            i++;
        }

        long long back = 0;
        int j = vec.size()-1;
        int temp = k-1;
        while(temp--){
            back += vec[j];
            j--;
        }

        return back - front;
    }
};
