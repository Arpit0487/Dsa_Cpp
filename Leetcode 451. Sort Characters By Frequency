class Solution {
public:
    string frequencySort(string s) {
        unordered_map<char,int> freq;
        for(auto x : s){
            freq[x]++;
        }

        priority_queue<pair<int,char>> pq;
        for(auto x : freq){
            pq.push({x.second, x.first});
        }
 
        string result;
        while(!pq.empty()){
            auto top = pq.top(); 
            pq.pop();
            int f = top.first;
            char c = top.second;
            result.append(f, c);
        }

        return result;
    }
};
