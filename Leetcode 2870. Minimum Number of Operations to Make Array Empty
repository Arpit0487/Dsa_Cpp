class Solution {
public:
    int minOperations(vector<int>& nums) {
        unordered_map<int, int> mp;
        int count = 0;

        for (auto x : nums)
            mp[x]++;

        for (auto x : mp) {
            int f = x.second;
            if (f == 1)
                return -1;

            if (f % 3 == 0) {
                count += f / 3;
            } else if (f % 3 == 1) {
                count += (f - 4) / 3 + 2;
            } else {
                count += f / 3 + 1;
            }
        }
        return count;
    }
};
