class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        int left = 0;
        int right = numbers.size() - 1;
        while (left < right) {
            int n = numbers[left] + numbers[right];
            if (n == target)
                return {left + 1, right + 1};

            else if (n < target)
                left++;

            else if (n > target)
                right--;
        }
        return {};
    }
};
