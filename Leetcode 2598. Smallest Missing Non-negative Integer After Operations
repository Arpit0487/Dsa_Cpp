class Solution {
public:
    int findSmallestInteger(vector<int>& nums, int value) {
        unordered_map<int,int> freq;
        for(int i=0; i<nums.size(); i++){
            int ele = ((nums[i]%value) + value) % value;
            freq[ele]++;
        }
        
        int idx = 0;
        while(freq[idx % value] > 0){
            freq[idx % value]--;
            idx++;
        }
        return idx;
    }
};
