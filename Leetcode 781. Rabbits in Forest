class Solution {
public:
    int numRabbits(vector<int>& answers) {
        int total = 0;
        unordered_map<int,int> mp;

        for (auto x : answers) {
            if (mp[x] == 0) {
                total += x + 1;
                mp[x] = x;
            } else {
                mp[x]--;
            }
        }

        return total;
    }
};
