class Solution {
public:
    string mapWordWeights(vector<string>& words, vector<int>& weights) {
        string result = "";
        for(auto word : words){
            int sum = 0;
            for(char c : word){
                sum+= weights[c-'a'];
            }
            int mod = sum%26;
            char map = 'z'-mod;
            result.push_back(map);
        }
        return result;
    }
};
